{
  "name": "frontend-typescript-jest",
  "version": "1.0.0",
  "description": "boilerplate for simple frontend application in TypeScript w/ Jest for tests",
  "main": "server/index.ts",
  "scripts": {
    "start": "webpack serve",
    "tsc": "tsc",
    "reload": "reload",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "boilerplate",
    "frontend",
    "typescript",
    "jest"
  ],
  "author": "jjoekoullas",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^23.3.14",
    "@types/webpack-dev-server": "^3.11.1",
    "awesome-typescript-loader": "^5.2.1",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^5.0.0",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.5.0",
    "jest": "^26.6.2",
    "reload": "^2.4.0",
    "sass": "^1.28.0",
    "sass-loader": "^10.0.0",
    "style-loader": "^0.23.1",
    "ts-jest": "^26.4.3",
    "ts-node": "^7.0.1",
    "typescript": "^3.9.7",
    "webpack": "^4.0.0",
    "webpack-cli": "^4.1.0",
    "webpack-dev-server": "^3.11.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)$": "ts-jest"
    },
    "testRegex": "/test/.*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "app/(.*)": "<rootDir>/src/$1"
    }
  }
}
